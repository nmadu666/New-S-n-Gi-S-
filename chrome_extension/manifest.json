{
  "manifest_version": 3,
  "name": "Tra Cứu Màu Sơn (Sơn Giá Sỉ)",
  "version": "1.0",
  "description": "Tra cứu màu sơn, dòng sản phẩm và giá pha sơn theo thời gian thực.",
  "permissions": [
    "sidePanel"
  ],
  "host_permissions": [
    "https://script.google.com/macros/s/AKfycbxub034UvLNAad2lkELjIkRqsN7yJqFCLBnG8pbqNascU6MiC1vODHpQG_UwPhKnMY/exec"
  ],
  "action": {
    "default_title": "Mở tra cứu màu",
    "default_icons": {
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "background": {
    "service_worker": "service-worker.js"
  },
  "side_panel": {
    "default_path": "sidebar.html"
  },
  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}
